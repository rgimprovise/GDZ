# ===========================================
# TutorBot Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values:
#   cp env.example .env

# Core
ENV=local
BASE_URL=http://localhost:8000

# Postgres
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=tutorbot
POSTGRES_USER=tutorbot
POSTGRES_PASSWORD=tutorbot_secret_change_me

# Redis
REDIS_URL=redis://redis:6379/0

# MinIO (S3-compatible storage)
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin_secret_change_me
MINIO_BUCKET=tutorbot

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret_here
TELEGRAM_TMA_BOT_USERNAME=YourBotUsername

# OpenAI (for future use)
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_MODEL_TEXT=gpt-4o
OPENAI_MODEL_VISION=gpt-4o

# Security
JWT_SECRET=your_jwt_secret_change_me_in_production
